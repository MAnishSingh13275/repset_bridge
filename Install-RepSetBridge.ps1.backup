function Test-DotNetRuntime {
    [CmdletBinding()]
    param()
    
    Write-InstallationLog -Level Debug -Message "Checking .NET runtime availability..."
    
    try {
        # Check for .NET Framework 4.7.2 or higher, or .NET Core/5+
        $dotNetVersions = @()
        
